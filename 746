class Solution:
    def minCostClimbingStairs(self, cost: List[int]) -> int:
        from functools import lru_cache

        @lru_cache(None)
        def dp(n):
            if n < 2:
                return cost[n]
            return cost[n] + min(dp(n-1), dp(n-2))

        n = len(cost)
        return min(dp(n-1), dp(n-2))
